[settings]
auto_install                        = false
exec_auto_install                   = false
experimental                        = true
idiomatic_version_file_enable_tools = ['rust']
not_found_auto_install              = false
task_run_auto_install               = false
trusted_config_paths                = ['~/.config/mise']

  [settings.npm]
  bun = true

  [settings.pipx]
  uvx = true

  # [settings.python]
  # uv_venv_auto = true

[tools]
bun                         = 'latest'
deno                        = 'latest'
elixir                      = 'latest'
erlang                      = 'latest'
go                          = 'latest'
kubectl                     = ['latest', '1.33', '1.31']
node                        = 'lts'
python                      = ['latest', 'sub-0.1:latest', 'sub-0.2:latest', 'sub-0.3:latest', 'sub-0.4:latest', '3.8']
ruby                        = 'latest'
rust                        = '1.91'
stylua                      = 'latest'
uv                          = 'latest'
{{- if .machine.work }}
java                        = 'graalvm-community-21'
scala                       = 'latest'
{{- end }}

