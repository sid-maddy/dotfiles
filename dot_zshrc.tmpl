# Enable Powerlevel10k instant prompt. Should stay close to the top of ~/.zshrc.
# Initialization code that may require console input (password prompts, [y/n]
# confirmations, etc.) must go above this block; everything else may go below.
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh";
fi

# User configuration
{{ if .machine.macos -}}
export LANG="en_US.UTF-8";
{{ else -}}
export LANG="en_IN.UTF-8";
{{ end -}}
export TZ="Asia/Kolkata";

export EDITOR="nvim";
export VISUAL="nvim";

{{ if and .machine.macos .machine.work -}}
. ~/.asdf/plugins/java/set-java-home.zsh
{{- end }}

# pnpm
{{ if .machine.macos -}}
export PNPM_HOME="${HOME}/Library/pnpm";
{{ else -}}
export PNPM_HOME="${HOME}/.local/share/pnpm";
{{ end -}}
# pnpm end

export path=(
  # "${HOME}/.config/rofi/bin"
  "${HOME}/.jsvu"
  "${HOME}/.krew/bin"
  "${PNPM_HOME}"
  "${HOME}/.local/bin"
  {{ if .machine.macos -}}
  {{  if .machine.work -}}
  "${HOME}/Library/Application Support/Coursier/bin"
  {{  end -}}
  "/opt/homebrew/bin"
  "/opt/homebrew/opt/curl/bin"
  "/opt/homebrew/sbin"
  {{ else -}}
  "/home/linuxbrew/.linuxbrew/bin"
  "/home/linuxbrew/.linuxbrew/sbin"
  {{ end -}}
  $path
);
export fpath=("${HOME}/.zfunc" "$(brew --prefix)/share/zsh/site-functions" $fpath);

{{ if .machine.macos -}}
# Compilation flags
export LDFLAGS="-L/opt/homebrew/opt/curl/lib";
export CPPFLAGS="-I/opt/homebrew/opt/curl/include";

# pkg-config
export PKG_CONFIG_PATH="/opt/homebrew/opt/curl/lib/pkgconfig";
{{- end }}

# Path to your oh-my-zsh installation.
export ZSH="$HOME/.oh-my-zsh";

# Set name of the theme to load
ZSH_THEME="powerlevel10k/powerlevel10k";

# Which plugins would you like to load?
# Add wisely, as too many plugins slow down shell startup.
plugins=(
  asdf
  aws
  brew
  docker
  docker-compose
  fzf
  gcloud
  git
  golang
  kubectl
  minikube
  npm
  pdm
  poetry
  {{- if .machine.macos }}
  macos
  {{- else }}
  systemd
  ubuntu
  {{- end }}
  zoxide
  zsh-autosuggestions
  zsh-syntax-highlighting
);

# Disable automatic updates
zstyle ':omz:update' mode disabled;

# Path to the completion cache file
ZSH_COMPDUMP="${ZSH_CACHE_DIR:-~/.oh-my-zsh/cache}/.zcompdump";

# Display red dots whilst waiting for completion.
# You can also set it to another string to have that shown instead of the default red dots.
COMPLETION_WAITING_DOTS="true";

# Use hyphen-insensitive completion.
# Case-sensitive completion must be off. _ and - will be interchangeable.
HYPHEN_INSENSITIVE="true";

# Disable marking untracked files under VCS as dirty.
# This makes repository status check for large repositories much, much faster.
DISABLE_UNTRACKED_FILES_DIRTY="true";

export ZSH_DISABLE_COMPFIX=true;
source "${ZSH}/oh-my-zsh.sh";

# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh.
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh;
